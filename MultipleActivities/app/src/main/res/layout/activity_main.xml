<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/apptitle"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date 'nd Rate"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="7"
        android:rowCount="4"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:outlineProvider="background">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/pic1"
            android:layout_row="0"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_columnSpan="2"
            android:src="@mipmap/jammfraser"
            android:layout_column="0"
            android:onClick="openProfile" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/pic4"
            android:layout_row="0"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_columnSpan="3"
            android:src="@mipmap/geillisduncan"
            android:layout_column="3"
            android:onClick="openProfile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jamie"
            android:textStyle="bold"
            android:textColor="#0AB8B8"
            android:id="@+id/name1"
            android:layout_row="0"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No rating"
            android:id="@+id/score1"
            android:layout_row="0"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geillis"
            android:textStyle="bold"
            android:textColor="#0AB8B8"
            android:id="@+id/name4"
            android:layout_row="0"
            android:layout_column="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No rating"
            android:id="@+id/score4"
            android:layout_row="0"
            android:layout_column="6" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/pic2"
            android:layout_row="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_columnSpan="2"
            android:src="@mipmap/murtaghfitzfraser"
            android:layout_column="0"
            android:onClick="openProfile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Murtagh"
            android:textStyle="bold"
            android:textColor="#0AB8B8"
            android:id="@+id/name2"
            android:layout_row="1"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No rating"
            android:id="@+id/score2"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/pic5"
            android:layout_row="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_columnSpan="3"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/bjrandall"
            android:layout_column="3"
            android:onClick="openProfile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jonathan"
            android:textStyle="bold"
            android:textColor="#0AB8B8"
            android:id="@+id/name5"
            android:layout_row="1"
            android:layout_column="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No rating"
            android:id="@+id/score5"
            android:layout_row="1"
            android:layout_column="6" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/pic3"
            android:layout_row="2"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_columnSpan="2"
            android:src="@mipmap/clairebeauchamp"
            android:layout_column="0"
            android:onClick="openProfile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claire"
            android:textStyle="bold"
            android:textColor="#0AB8B8"
            android:id="@+id/name3"
            android:layout_row="2"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No rating"
            android:id="@+id/score3"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/pic6"
            android:layout_row="2"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_columnSpan="3"
            android:src="@mipmap/jennymurray"
            android:layout_column="3"
            android:onClick="openProfile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenny"
            android:textStyle="bold"
            android:textColor="#0AB8B8"
            android:id="@+id/name6"
            android:layout_row="2"
            android:layout_column="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No rating"
            android:id="@+id/score6"
            android:layout_row="2"
            android:layout_column="6" />

    </GridLayout>

</LinearLayout>
